<aura:component implements="flexipage:availableForAllPageTypes,force:hasRecordId" access="global" controller="StudentDashboardController">
    
    <aura:attribute name="recordId" type="String" /> 
    
    <aura:attribute name="studentName" type="String" default="John Doe"/>
    <aura:attribute name="studentId" type="String" default="STU001"/>
    <aura:attribute name="department" type="String" default="Computer Science"/>
    <aura:attribute name="yearOfStudy" type="String" default="3rd Year"/>
    <aura:attribute name="academicStatus" type="String" default="Active"/>
    <aura:attribute name="currentGpa" type="Decimal" default="8.5"/>
    <aura:attribute name="academicStanding" type="String" default="Good Standing"/>
    <aura:attribute name="standingVariant" type="String" default="success"/>
    <aura:attribute name="totalCredits" type="Integer" default="120"/>
    <aura:attribute name="classRank" type="String" default="15/200"/>
    <aura:attribute name="clubCount" type="Integer" default="3"/>
    
    <aura:attribute name="currentCourses" type="List"/>
    <aura:attribute name="recentGrades" type="List"/>
    <aura:attribute name="recommendedJobs" type="List"/>
    <aura:attribute name="myClubs" type="List"/>
    <aura:attribute name="upcomingEvents" type="List"/>
    
    <aura:attribute name="isLoading" type="Boolean" default="false"/>
    <aura:attribute name="selectedTab" type="String" default="academic"/>
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <lightning:card title="Student Dashboard" iconName="standard:education">
        <div class="slds-p-around_medium">
            
            <div class="student-header slds-grid slds-gutters slds-wrap">
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-3">
                    <div class="profile-card slds-box slds-theme_default">
                        <div class="slds-media">
                            <div class="slds-media__figure">
                                <lightning:avatar 
                                    fallbackIconName="standard:user"
                                    size="large">
                                </lightning:avatar>
                            </div>
                            <div class="slds-media__body slds-p-left_small">
                                <h2 class="slds-text-heading_medium">{!v.studentName}</h2>
                                <p class="slds-text-body_regular slds-text-color_weak">
                                    {!v.studentId} | {!v.department}
                                </p>
                                <p class="slds-text-body_small">
                                    {!v.yearOfStudy} • {!v.academicStatus}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-3">
                    <div class="gpa-card slds-box slds-theme_success">
                        <div class="slds-text-align_center">
                            <div class="gpa-circle">
                                <span class="gpa-value">{!v.currentGpa}</span>
                                <span class="gpa-scale">/10.0</span>
                            </div>
                            <p class="slds-text-heading_small slds-m-top_small">Current GPA</p>
                            <lightning:badge 
                                label="{!v.academicStanding}" 
                                class="slds-theme_success">
                            </lightning:badge>
                        </div>
                    </div>
                </div>
                
                <div class="slds-col slds-size_1-of-1 slds-medium-size_1-of-3">
                    <div class="stats-card slds-box">
                        <div class="slds-grid slds-gutters_small">
                            <div class="slds-col slds-text-align_center">
                                <span class="stat-number">{!v.totalCredits}</span>
                                <p class="stat-label">Credits</p>
                            </div>
                            <div class="slds-col slds-text-align_center">
                                <span class="stat-number">{!v.classRank}</span>
                                <p class="stat-label">Rank</p>
                            </div>
                            <div class="slds-col slds-text-align_center">
                                <span class="stat-number">{!v.clubCount}</span>
                                <p class="stat-label">Clubs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <lightning:tabset variant="scoped" class="slds-m-top_large" selectedTabId="{!v.selectedTab}">
                
                <lightning:tab label="Academic Overview" id="academic">
                    <div class="slds-grid slds-gutters slds-wrap slds-m-top_medium">
                        
                        <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2">
                            <lightning:card title="Current Courses" iconName="standard:education">
                                <div class="slds-p-horizontal_small">
                                    <aura:if isTrue="{!v.currentCourses.length > 0}">
                                        <aura:iteration items="{!v.currentCourses}" var="course">
                                            <div class="course-item slds-box slds-m-bottom_small">
                                                <div class="slds-grid slds-grid_align-spread">
                                                    <div>
                                                        <h4 class="slds-text-heading_small">{!course.Name}</h4>
                                                        <p class="slds-text-body_small slds-text-color_weak">
                                                            {!course.Course_Code__c} • {!course.Credits__c} Credits
                                                        </p>
                                                        <p class="slds-text-body_small">
                                                            Faculty: {!course.Faculty_Assigned__r.Name} 
                                                        </p>
                                                    </div>
                                                    <div class="slds-text-align_right">
                                                        <lightning:badge 
                                                            label="{!course.Enrollments__r[0].Final_Grade__c}" 
                                                            class="slds-theme_success">
                                                        </lightning:badge>
                                                        <p class="slds-text-body_small slds-m-top_x-small">
                                                            {!course.Enrollments__r[0].Attendance_Percentage__c}% Attendance
                                                        </p>
                                                    </div>
                                                </div>
                                                
                                                <div class="slds-m-top_small">
                                                    <lightning:progressBar 
                                                        value="{!course.Enrollments__r[0].Attendance_Percentage__c}" 
                                                        size="medium">
                                                    </lightning:progressBar>
                                                </div>
                                            </div>
                                        </aura:iteration>
                                        
                                        <aura:set attribute="else">
                                            <div class="slds-text-align_center slds-p-vertical_large">
                                                <lightning:icon iconName="utility:info" size="large" class="slds-m-bottom_small"/>
                                                <p>No current course enrollments found.</p>
                                            </div>
                                        </aura:set>
                                    </aura:if>
                                </div>
                            </lightning:card>
                        </div>
                        
                        <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2">
                            <lightning:card title="Recent Grades" iconName="standard:task">
                                <div class="slds-p-horizontal_small">
                                    <aura:if isTrue="{!v.recentGrades.length > 0}">
                                        <aura:iteration items="{!v.recentGrades}" var="grade">
                                            <div class="grade-item slds-box slds-m-bottom_small">
                                                <div class="slds-grid slds-grid_align-spread">
                                                    <div>
                                                        <h4 class="slds-text-heading_small">{!grade.Assessment_Name__c}</h4>
                                                        <p class="slds-text-body_small slds-text-color_weak">
                                                            {!grade.Course__r.Name} • {!grade.Assessment_Type__c}
                                                        </p>
                                                    </div>
                                                    <div class="slds-text-align_right">
                                                        <span class="grade-score">{!grade.Marks_Obtained__c}/{!grade.Maximum_Marks__c}</span>
                                                        <lightning:badge 
                                                            label="{!grade.Letter_Grade__c}">
                                                        </lightning:badge>
                                                        <p class="slds-text-body_small">
                                                            {!grade.Percentage__c}%
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </aura:iteration>
                                    </aura:if>
                                </div>
                            </lightning:card>
                        </div>
                    </div>
                </lightning:tab>
                
                <lightning:tab label="Placements" id="placement">
                    <div class="slds-m-top_medium">
                        
                        <lightning:card title="Recommended Jobs" iconName="standard:opportunity">
                            <aura:set attribute="actions">
                                <lightning:button 
                                    label="Find More Jobs" 
                                    onclick="{!c.handleFindJobs}"
                                    variant="brand">
                                </lightning:button>
                            </aura:set>
                            
                            <div class="slds-p-horizontal_small">
                                <aura:if isTrue="{!v.recommendedJobs.length > 0}">
                                    <aura:iteration items="{!v.recommendedJobs}" var="job">
                                        <div class="job-card slds-box slds-m-bottom_medium">
                                            <div class="slds-grid slds-grid_align-spread">
                                                <div class="slds-col slds-size_3-of-4">
                                                    <h3 class="slds-text-heading_medium">{!job.jobTitle}</h3>
                                                    <p class="slds-text-body_regular slds-text-color_weak">
                                                        {!job.companyName}
                                                    </p>
                                                    <div class="job-details slds-grid slds-gutters_small slds-m-top_small">
                                                        <div class="slds-col">
                                                            <lightning:icon iconName="utility:location" size="x-small"/>
                                                            <span class="slds-m-left_x-small">{!job.location}</span>
                                                        </div>
                                                        <div class="slds-col">
                                                            <lightning:icon iconName="utility:money" size="x-small"/>
                                                            <span class="slds-m-left_x-small">{!job.package} LPA</span>
                                                        </div>
                                                        <div class="slds-col">
                                                            <lightning:icon iconName="utility:clock" size="x-small"/>
                                                            <span class="slds-m-left_x-small">{!job.jobType}</span>
                                                        </div>
                                                    </div>
                                                    
                                                    <div class="slds-m-top_small">
                                                        <aura:iteration items="{!job.matchReasons}" var="reason">
                                                            <lightning:badge label="{!reason}" class="slds-m-right_x-small slds-m-bottom_x-small"/>
                                                        </aura:iteration>
                                                    </div>
                                                </div>
                                                
                                                <div class="slds-col slds-size_1-of-4 slds-text-align_right">
                                                    <div class="match-score">
                                                        <span class="score-value">{!job.matchPercentage}%</span>
                                                        <p class="slds-text-body_small">Match</p>
                                                    </div>
                                                    <lightning:button 
                                                        label="Apply Now" 
                                                        name="{!job.Id}"
                                                        onclick="{!c.handleApplyJob}"
                                                        variant="brand"
                                                        class="slds-m-top_small">
                                                    </lightning:button>
                                                </div>
                                            </div>
                                        </div>
                                    </aura:iteration>
                                    
                                    <aura:set attribute="else">
                                        <div class="slds-text-align_center slds-p-vertical_large">
                                            <lightning:icon iconName="utility:search" size="large"/>
                                            <p class="slds-m-top_small">No job recommendations available.</p>
                                            <lightning:button 
                                                label="Update Your Profile" 
                                                variant="brand"
                                                class="slds-m-top_small">
                                            </lightning:button>
                                        </div>
                                    </aura:set>
                                </aura:if>
                            </div>
                        </lightning:card>
                    </div>
                </lightning:tab>
                
                <lightning:tab label="Activities" id="activities">
                    <div class="slds-grid slds-gutters slds-wrap slds-m-top_medium">
                        
                        <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2">
                            <lightning:card title="My Clubs" iconName="standard:groups">
                                <div class="slds-p-horizontal_small">
                                    <aura:if isTrue="{!v.myClubs.length > 0}">
                                        <aura:iteration items="{!v.myClubs}" var="club">
                                            <div class="club-item slds-box slds-m-bottom_small">
                                                <div class="slds-grid slds-grid_align-spread">
                                                    <div>
                                                        <h4 class="slds-text-heading_small">{!club.Club__r.Name}</h4>
                                                        <p class="slds-text-body_small slds-text-color_weak">
                                                            {!club.Club__r.Club_Category__c}
                                                        </p>
                                                        <lightning:badge label="{!club.Member_Role__c}" class="slds-theme_success"/>
                                                    </div>
                                                    <div class="slds-text-align_right">
                                                        <p class="slds-text-body_small">
                                                            Since {!club.Join_Date__c}
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        </aura:iteration>
                                    </aura:if>
                                </div>
                            </lightning:card>
                        </div>
                        
                        <div class="slds-col slds-size_1-of-1 slds-large-size_1-of-2">
                            <lightning:card title="Upcoming Events" iconName="standard:event">
                                <div class="slds-p-horizontal_small">
                                    <aura:if isTrue="{!v.upcomingEvents.length > 0}">
                                        <aura:iteration items="{!v.upcomingEvents}" var="event">
                                            <div class="event-item slds-box slds-m-bottom_small">
                                                <h4 class="slds-text-heading_small">{!event.Name}</h4>
                                                <p class="slds-text-body_small slds-text-color_weak">
                                                    {!event.Event_Type__c} • {!event.Venue__c}
                                                </p>
                                                <p class="slds-text-body_small">
                                                    <lightning:icon iconName="utility:event" size="x-small"/>
                                                    <span class="slds-m-left_x-small">{!event.Event_Date__c}</span>
                                                </p>
                                                <div class="slds-m-top_small">
                                                    <lightning:button 
                                                        label="Register" 
                                                        name="{!event.Id}"
                                                        onclick="{!c.handleEventRegistration}"
                                                        variant="brand">
                                                    </lightning:button>
                                                </div>
                                            </div>
                                        </aura:iteration>
                                    </aura:if>
                                </div>
                            </lightning:card>
                        </div>
                    </div>
                </lightning:tab>
            </lightning:tabset>
        </div>
    </lightning:card>
    
    <aura:if isTrue="{!v.isLoading}">
        <lightning:spinner alternativeText="Loading..." size="large"/>
    </aura:if>
</aura:component>